{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "baseUrl": "./src",

    "paths": {
      "@shared/*": ["app/shared/*"],
      "@assets/*": ["assets/*"],
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@config/*": ["config/*"],
      "@stylesheet/*": ["app/stylesheet/*"]
    },

    "allowSyntheticDefaultImports": true

  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
